/** index.wxss **/
page {
  height: 100%;
  width: 100%;
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  overflow: hidden; /* Prevent scrolling */
}

.container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}


/* Upload Screen */
.upload-screen {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f7fa;
  padding: 16px;
  box-sizing: border-box;
}

.home-card {
  width: 100%;
  max-width: 600px;
  background-color: #ffffff;
  border-radius: 24px;
  padding: 16px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 20px 60px rgba(0,0,0,0.05);
}

.home-title {
  font-size: 24px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8px;
}

.home-subtitle {
  font-size: 14px;
  color: #64748b;
  margin-bottom: 28px;
  text-align: center;
}

.home-buttons {
  display: flex;
  gap: 16px;
  width: 100%;
  justify-content: center;
}

.home-btn {
  flex: 1;
  height: 160px;
  border-radius: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16px 16px;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.home-btn:active {
  transform: scale(0.98);
}

.btn-camera {
  background-color: #FFF6ED;
}

.btn-album {
  background-color: #EFF6FF;
}

.home-btn-icon {
  width: 84px;
  height: 84px;
  margin-bottom: -12px;
}

.home-btn-title {
  font-size: 18px;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 8px;
}

.home-btn-desc {
  font-size: 12px;
  color: #94a3b8;
  text-align: center;
  line-height: 1.4;
}
